<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_8sdp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorFont"
        android:fontFamily="@font/gothamrounded_book"
        tools:text="United Kingdom india"/>

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_total_cases"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorFont"
            android:fontFamily="@font/gothamrounded_book"
            tools:text="5581829"/>

        <TextView
            android:id="@+id/tv_total_cases_new"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorRed"
            android:fontFamily="@font/gothamrounded_medium"
            tools:text="100"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_recovered"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorFont"
            android:fontFamily="@font/gothamrounded_book"
            tools:text="2231124"/>

        <TextView
            android:id="@+id/tv_recovereds_new"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorGreen"
            android:fontFamily="@font/gothamrounded_medium"
            tools:text="100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_deaths"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorFont"
            android:fontFamily="@font/gothamrounded_book"
            tools:text="354790"/>


        <TextView
            android:id="@+id/tv_deaths_new"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="#000"
            android:fontFamily="@font/gothamrounded_medium"
            tools:text="100"/>

    </LinearLayout>


</LinearLayout>